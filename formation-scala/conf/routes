
GET    /users/:email   controllers.UserController.findByEmail(email)
GET    /users          controllers.UserController.findAll()
DELETE  /users          controllers.UserController.deleteAll()
GET    /stream/users   controllers.UserController.findAllStream()
POST   /stream/users   controllers.UserController.createStream()
POST   /users          controllers.UserController.createUser()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
